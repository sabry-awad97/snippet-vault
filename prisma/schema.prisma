datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = env("PRISMA_CLIENT_PROVIDER")
    output   = env("PRISMA_OUTPUT")
}

model User {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    name         String
    email        String   @unique
    passwordHash String
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@map("users")
}
